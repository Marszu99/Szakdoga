<UserControl x:Class="WpfDemo.View.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.View" 
        xmlns:components="clr-namespace:WpfDemo.Components"
        mc:Ignorable="d"
        Name="updateUser" Height="200" Width="650" Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
 
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Row="0" Text="Username" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Margin="0" FontSize="30"/>
        <TextBlock Grid.Row="1" Text="Email" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Margin="0" FontSize="30"/>
        <!-- <TextBlock Grid.Row="1" Text="Password" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Margin="0" FontSize="30"/>
        <TextBlock Grid.Row="2" Text="FirstName" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Margin="0" FontSize="30"/>
        <TextBlock Grid.Row="3" Text="LastName" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Margin="0" FontSize="30"/>
        <TextBlock Grid.Row="4" Text="Email" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Margin="0" FontSize="30"/>
        <TextBlock Grid.Row="5" Text="Telephone" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" 
                   Margin="0" FontSize="30"/>-->


        <TextBox x:Name="UserUsername" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="26" Margin="15" BorderThickness="1" BorderBrush="Black"
                 Text="{Binding SelectedUser.Username, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Background="#eee" IsReadOnly="{Binding SelectedUser.IsUserNameReadOnly}">
            <!--ToolTipService.ToolTip="{Binding SelectedUser.ErrorCollection[Username]}"-->
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
                <Style TargetType="{x:Type TextBox}">
                    <Style.Triggers>
                        <Trigger Property="IsSelectionActive" Value="True">
                            <!--
                            <Trigger Property="IsSelectionActive" Value="True">
                            <Trigger Property="Validation.HasError" Value="true">
                            <Trigger Property="Text" Value="Valami"> 
                            -->
                            <Setter Property="ToolTipService.ToolTip" Value="{Binding SelectedUser.ErrorCollection[Username]}"/>
                            <Setter Property="Validation.ErrorTemplate">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <StackPanel>
                                            <Border BorderBrush="red" BorderThickness="1">
                                                <AdornedElementPlaceholder/>
                                            </Border>
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Validation.ErrorTemplate">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <StackPanel>
                                            <Border BorderBrush="DarkGray" BorderThickness="1">
                                                <AdornedElementPlaceholder/>
                                            </Border>
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!--
        <components:BindablePasswordBox x:Name="UserPassword" Password="{Binding SelectedUser.Password, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                        Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="15" HorizontalAlignment="Stretch" FontSize="26" Background="#eee"
                                        ToolTipService.ToolTip="{Binding SelectedUser.ErrorCollection[Password]}">
            <components:BindablePasswordBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </components:BindablePasswordBox.Resources>
        </components:BindablePasswordBox>

        <TextBox x:Name="UserFirstName" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="15" HorizontalAlignment="Stretch" Background="#eee" BorderThickness="1" BorderBrush="Black"
                 FontSize="26" Text="{Binding SelectedUser.FirstName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                 ToolTipService.ToolTip="{Binding SelectedUser.ErrorCollection[FirstName]}">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <TextBox x:Name="UserLastName" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="15" HorizontalAlignment="Stretch" FontSize="26" 
                 Text="{Binding SelectedUser.LastName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Background="#eee" BorderThickness="1" BorderBrush="Black"
                 ToolTipService.ToolTip="{Binding SelectedUser.ErrorCollection[LastName]}">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </TextBox.Resources>
        </TextBox>-->

        <TextBox x:Name="UserEmail" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="15" HorizontalAlignment="Stretch" FontSize="26" 
                 Text="{Binding SelectedUser.Email, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Background="#eee" BorderThickness="1" BorderBrush="Black"
                 ToolTipService.ToolTip="{Binding SelectedUser.ErrorCollection[Email]}">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!--
        <TextBox x:Name="UserTelephone" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" Margin="15" HorizontalAlignment="Stretch" FontSize="26" 
                 Text="{Binding SelectedUser.Telephone, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" Background="#eee" BorderThickness="1" BorderBrush="Black"
                 ToolTipService.ToolTip="{Binding SelectedUser.ErrorCollection[Telephone]}">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </TextBox.Resources>
        </TextBox>-->

        <Button x:Name="SaveUserButton" 
                Command="{Binding SelectedUser.SaveCommand}"
                Content="Save" Grid.Column="1" Grid.Row="6" Height="45" Width="70" Margin="100 0 0 0" FontSize="26" HorizontalAlignment="Left"
                BorderThickness="1" BorderBrush="Black">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>

    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding SelectedUser.SaveCommand}"/>
    </UserControl.InputBindings>

</UserControl>
