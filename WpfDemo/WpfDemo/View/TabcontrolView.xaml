<UserControl x:Class="WpfDemo.View.TabcontrolView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo.View"
        mc:Ignorable="d"
        Name="TabcontrolWindowPage" Background="Gray"
        d:DesignWidth="1550" d:DesignHeight="830">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>
                        
            
            <Border HorizontalAlignment="Left" VerticalAlignment="Top"  BorderBrush="DimGray" Background="DimGray" BorderThickness="2" Height="55">
                <!--maradjon??-->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10" Width="1550">
                    <Button x:Name="PreviousTabButton" Click="PreviousTabButton_Click" FontFamily="Marlett" Content="3" Grid.Column="0" Grid.Row="0" Width="50" Height="28" 
                        Margin="5 0 0 0" FontSize="30" BorderThickness="1" BorderBrush="Black">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    
                    <Button x:Name="NextTabButton" Click="NextTabButton_Click" FontFamily="Marlett" Content="4" Grid.Column="0" Grid.Row="0" Width="50" Height="28" Margin="0 0 0 0"
                        FontSize="30" BorderThickness="1" BorderBrush="Black">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <!--<TextBlock Text="Worktime Registry" Margin="550 0 0 0" VerticalAlignment="Top" FontSize="32" FontWeight="Bold" FontStyle="Italic"/>-->
                </StackPanel>
            </Border>

            <TextBlock Text="Worktime Registry" Margin="0 0 0 0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="33" FontWeight="Bold" FontStyle="Italic"/>

            <TextBlock Grid.Row="0" Text="{Binding CompanyName}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="38" Margin="1200 0 0 0" FontSize="33" FontFamily="Times New Roman" Foreground="Black" Padding="0 0 0 0"/>


            <TabControl x:Name="tabControl" Grid.Row="1" Background="DarkGray" Margin="0 12 0 0" FontSize="18" Padding="0 0 0 0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gray" CornerRadius="4,4,0,0" Margin="5 0 0 0">
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="10 0 10 2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="DarkGray" />
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <!-- <Setter Property="Foreground" Value="White" />-->
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#FFDDDDDD" />
                                            <Setter Property="FontWeight" Value="Medium"/>
                                        </Trigger>
                                        <!--<Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="PowderBlue" />
                                    </Trigger>-->
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem Header="{Binding RecordString}" x:Name="RecordTabItem">
                    <local:RecordManagementView Grid.Row="1" Margin="0" FontWeight="Normal"/>
                </TabItem>

                <TabItem Header="{Binding TaskString}" x:Name="TaskTabItem">
                    <local:TaskManagementView Grid.Row="1" Margin="0" FontWeight="Normal"/>
                </TabItem>

                <TabItem Header="{Binding UserString}" x:Name="UserTabItem">
                    <local:UserManagementView Grid.Row="1" Margin="0" FontWeight="Normal"/>
                </TabItem>
            </TabControl>

            <!--<StackPanel Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Height="38" Width="200" Margin="0 0 120 0" Background="#FFCEC7C7">
                <Border BorderBrush="#FF323131" BorderThickness="3">
