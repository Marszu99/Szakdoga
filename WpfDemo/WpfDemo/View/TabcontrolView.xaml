        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo"
        xmlns:view="clr-namespace:WpfDemo.View"
        xmlns:l10n="clr-namespace:TimeSheet.Resource;assembly=TimeSheet.Resource"
        mc:Ignorable="d"
        Name="TabcontrolWindowPage" Background="Gray"
        d:DesignWidth="1550" d:DesignHeight="830">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>
                        
            
            <Border HorizontalAlignment="Left" VerticalAlignment="Top"  BorderBrush="DimGray" Background="DimGray" BorderThickness="2" Height="60">
                <!--maradjon??-->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10" Width="1550">
                    <Button x:Name="PreviousTabButton" Click="PreviousTabButton_Click" FontFamily="Marlett" Content="3" Grid.Column="0" Grid.Row="0" Width="50"
                            Height="32" Margin="5 10 0 0" FontSize="35" BorderThickness="1" BorderBrush="Black">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    
                    <Button x:Name="NextTabButton" Click="NextTabButton_Click" FontFamily="Marlett" Content="4" Grid.Column="0" Grid.Row="0" Width="50" Height="32"
                            Margin="0 10 0 0" FontSize="35" BorderThickness="1" BorderBrush="Black">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <TextBlock Text="Worktime Registry" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="40" FontWeight="Bold" FontStyle="Italic"/>

            <!--<TextBlock Grid.Row="0" Text="{Binding CompanyName}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="38" Margin="1200 0 0 0"
                       FontSize="33" FontFamily="Times New Roman" Foreground="Black" Padding="0 0 0 0"/>-->


            <TabControl x:Name="tabControl" Grid.Row="1" Background="DarkGray" Margin="0 12 0 0" FontSize="18" Padding="0 0 0 0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gray" CornerRadius="4,4,0,0" Margin="5 0 0 0">
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header"
                                                          Margin="10 0 10 2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="DarkGray" />
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <!-- <Setter Property="Foreground" Value="White" />-->
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#FFDDDDDD" />
                                            <Setter Property="FontWeight" Value="Medium"/>
                                        </Trigger>
                                        <!--<Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="PowderBlue" />
                                    </Trigger>-->
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="C:\Marci\Egyetem\BLB-Soft\Szakdoga\Szakdoga\WpfDemo\WpfDemo\Components\record.png" VerticalAlignment="Center" Width="24"/>
                            <TextBlock Text="{local:ResxStatic l10n:Resources.Records}" VerticalAlignment="Center" Margin="5, 0" FontSize="22"/>
                        </StackPanel>
                    </TabItem.Header>
                    <view:RecordManagementView Grid.Row="1" Margin="0" FontWeight="Normal"/>
                </TabItem>


                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="C:\Marci\Egyetem\BLB-Soft\Szakdoga\Szakdoga\WpfDemo\WpfDemo\Components\tasks.png" VerticalAlignment="Center" Width="24"/>
                            <TextBlock Text="{local:ResxStatic l10n:Resources.Tasks}" VerticalAlignment="Center" Margin="5, 0" FontSize="22"/>
                        </StackPanel>
                    </TabItem.Header>
                    <view:TaskManagementView Grid.Row="1" Margin="0" FontWeight="Normal"/>
                </TabItem>

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="C:\Marci\Egyetem\BLB-Soft\Szakdoga\Szakdoga\WpfDemo\WpfDemo\Components\users.png" VerticalAlignment="Center" Width="24"/>
                            <TextBlock Text="{local:ResxStatic l10n:Resources.Users}" VerticalAlignment="Center" Margin="5, 0" FontSize="22"/>
                        </StackPanel>
                    </TabItem.Header>
                    <view:UserManagementView Grid.Row="1" Margin="0" FontWeight="Normal"/>
                </TabItem>
            </TabControl>
            
            
