                        <TextBlock x:Name="LoginUsername1" Text="{Binding LoggedUserUsername}" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="24" Foreground="Black" Width="155" Padding="5 0 0 0">
                            <TextBlock.InputBindings>
                                <MouseBinding MouseAction="LeftClick" Command="{Binding ShowMyProfileCommand}"/>
                            </TextBlock.InputBindings>
