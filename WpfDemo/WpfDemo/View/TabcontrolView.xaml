                        </Menu>
                        <Image Source="C:\Marci\Egyetem\BLB-Soft\Szakdoga\Szakdoga\WpfDemo\WpfDemo\Components\ProfileIcon.png" Height="39" Width="48" 
                               HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0.8"/>
                    </Grid>
                </Border>
            </StackPanel>


            <Grid Grid.Row="2"  Background="DarkGray">
                <Expander ExpandDirection="Up" IsExpanded="False" Margin="5 0 0 0">
                    <!--IsExpanded="True"-->
                    <Expander.Header>
                        <TextBlock FontStyle="Italic" Foreground="Black" Text="Feedback" FontSize="18" TextAlignment="Left"/>
                    </Expander.Header>
                    <TextBlock x:Name="ExpanderMessage" TextWrapping="Wrap" Background="LightSlateGray" FontSize="20" Margin="5 0 0 0" Text="Welcome!"/>
                </Expander>
            </Grid>
        </Grid>
        <!-- Frame miatt-->

        <Frame x:Name="TabcontrolWindowContent" Margin="0 0 0 0" NavigationUIVisibility="Hidden"/>
    </Grid>

</UserControl>
