                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="PowderBlue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </StackPanel>-->
            <StackPanel Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Height="40" Width="250" Margin="0 0 5 0" Background="#FFCEC7C7">
                <Border BorderBrush="#FF323131" BorderThickness="3">
                    <Grid Grid.Row="1">
                        <Menu Background="#FFCEC7C7">
                            <MenuItem Header="{Binding LoggedUserUsername}" FontSize="24" Foreground="Black" Width="205" Margin="40 0 0 0" Padding="5 0 0 0">
                                <MenuItem Header="{Binding ProfileString}" Command="{Binding ShowMyProfileCommand}"/>
                                <MenuItem Header="{Binding LanuageString}" Command="{Binding ChangeLanguageCommand}"/>
                                <MenuItem Header="{Binding LogoutString}" Command="{Binding LogoutCommand}"/>
                            </MenuItem>
                        </Menu>
                        <Image Source="C:\Marci\Egyetem\BLB-Soft\Szakdoga\Szakdoga\WpfDemo\WpfDemo\Components\ProfileIcon.png" Height="32" Width="50" HorizontalAlignment="Left" Opacity="0.8"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!--<Button Grid.Row="1" x:Name="LogoutButton" Command="{Binding LogoutCommand}" Content="{Binding LogoutString}" HorizontalAlignment="Right" VerticalAlignment="Top" Height="38" Width="90"
                    FontSize="24" Margin="0 0 15 0" Padding="1.5" BorderThickness="1" BorderBrush="Black">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>-->
                     

            <Grid Grid.Row="2"  Background="DarkGray">
                <Expander ExpandDirection="Up" IsExpanded="False" Margin="5 0 0 0">
                    <!--IsExpanded="True"-->
                    <Expander.Header>
                        <TextBlock FontStyle="Italic" Foreground="Black" Text="Feedback" FontSize="18" TextAlignment="Left"/>
                    </Expander.Header>
                    <TextBlock x:Name="ExpanderMessage" TextWrapping="Wrap" Background="LightSlateGray" FontSize="20" Margin="5 0 0 0" Text="Welcome!"/>
                </Expander>
            </Grid>
        </Grid>
        <!-- Frame miatt-->

        <Frame x:Name="TabcontrolWindowContent" Margin="0 0 0 0" NavigationUIVisibility="Hidden"/>
    </Grid>

</UserControl>
